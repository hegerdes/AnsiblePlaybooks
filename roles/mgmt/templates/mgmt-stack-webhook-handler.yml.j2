version: '3.7'

services:
  webhook-handler:
    image: docker-registry.***REMOVED***/symbic-general/symbic-webhook-handler:stable
    hostname: {{ inventory_dir | basename }}-webhook-handler
    command: -hooks /app/hooks/hooks.yml -verbose -hotreload
