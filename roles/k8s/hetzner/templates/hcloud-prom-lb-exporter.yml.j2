# Repo: https://github.com/wacken89/hetzner-load-balancer-prometheus-exporter
# Dashboard: https://github.com/wacken89/hetzner-load-balancer-prometheus-exporter/tree/master/example/grafana-dashboard
apiVersion: apps/v1
kind: Deployment
metadata:
  name: hetzner-load-balancer-prometheus-exporter
  labels:
    app: hetzner-load-balancer-prometheus-exporter
spec:
  replicas: 1
  selector:
    matchLabels:
      app: hetzner-load-balancer-prometheus-exporter
  template:
    metadata:
      labels:
        app: hetzner-load-balancer-prometheus-exporter
    spec:
      containers:
      - name: lb-exporter
        # image: nginx:latest
        image: wacken/hetzner-load-balancer-prometheus-exporter:latest
        env:
        - name: LOAD_BALANCER_IDS
          value: "all"
        - name: SCRAPE_INTERVAL
          value: "30"
        - name: ACCESS_TOKEN
          valueFrom:
            secretKeyRef:
              key: token
              name: hcloud
        resources:
          requests:
            memory: "128Mi"
            cpu: "250m"
          limits:
            memory: "128Mi"
            cpu: "250m"
        ports:
        - name: metrics
          containerPort: 8000
---
apiVersion: v1
kind: Service
metadata:
  name: hetzner-load-balancer-prometheus-exporter
  labels:
    app: hetzner-load-balancer-prometheus-exporter
  annotations:
    prometheus.io/scrape: 'true'
    prometheus.io/scheme: 'http'
    prometheus.io/port: '8000'
    prometheus.io/path: '/'
spec:
  type: ClusterIP
  ports:
    - port: 8000
      targetPort: metrics
      protocol: TCP
      name: http
  selector:
    app.kubernetes.io/name: hetzner-load-balancer-prometheus-exporter
